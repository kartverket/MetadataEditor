@model Kartverket.MetadataEditor.Models.MetadataItemViewModel

@{
    string css = "";
    string relationIcon = "";
    if (ViewData.ContainsKey("Relation")) {
        css = "relation";
        relationIcon = "<span class=\"relation-icon\"><img src=\"" + Url.Content("~/Content/arrow-down-right.png") + "\" width=\"9\" height=\"17\" alt=\"pil ned og til høyre.\"></span>";
    }   
}

<tr @css>
    <td>
        @Html.Raw(relationIcon)
        <a href="@Url.Action("Edit", new { uuid=@Model.Uuid })">
            @Model.Title
        </a>
        @if (!string.IsNullOrWhiteSpace(Model.Relation) && Model.Type == "service")
{
    <small>[<a href="@Url.Action("Edit", new { uuid = @Model.Relation})">Lenke til tjenesten</a>]</small>
}
    </td>
    <td>@Model.Organization</td>
    <th>
        @if (Model.Type == "service")
        {
            <span class="label label-info">@Resources.UI.Metadata_Type_Service</span>
        }
        else if (Model.Type == "dataset")
        {
            <span class="label label-success">@Resources.UI.Metadata_Type_Dataset</span>
        }
        else
        {
            <span class="label label-warning">@Model.Type</span>
        }
        @if (!string.IsNullOrWhiteSpace(Model.Relation) && Model.Type == "service")
        {
            <span class="label label-info">WMS-Lag</span>
        }
    </th>
    <td class="text-right btn-toolbar">
        <div class="btn-group">
            <a href="https://www.geonorge.no/geonetwork/srv/nor/xml_iso19139?uuid=@Model.Uuid" target="_blank" class="btn btn-default btn-xs">
                <i class="glyphicon glyphicon-file"></i> Last ned XML
            </a>
            <a href="https://www.geonorge.no/geonetwork/?uuid=@Model.Uuid" target="_blank" class="btn btn-default btn-xs">
                <span class="glyphicon glyphicon-share-alt"></span> Vis i katalog
            </a>
        </div>
        <div class="btn-group">
            <a href="@Url.Action("ConfirmDelete", "Metadata", new { uuid = Model.Uuid })" class="btn btn-default btn-xs"><span class="glyphicon glyphicon-trash"></span> Slett</a>
        </div>
    </td>
</tr>