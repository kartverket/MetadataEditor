@model Kartverket.MetadataEditor.Models.MetadataItemViewModel

@{
    string css = "";
    string relationIcon = "";
    if (ViewData.ContainsKey("Relation")) {
        css = "relation";
        relationIcon = "<span class=\"relation-icon\"><img src=\"" + Url.Content("~/Content/arrow-down-right.png") + "\" width=\"9\" height=\"17\" alt=\"pil ned og til høyre.\"></span>";
    }   
}

<tr @css>
    <td>
        @Html.Raw(relationIcon)
        <a href="@Url.Action("Edit", new { uuid=@Model.Uuid })">
            @Model.Title
        </a>
    </td>
    <td>@Model.Organization</td>
    <th>
        @if (Model.Type == "service")
        {
            <span class="label label-info">@Resources.UI.Metadata_Type_Service</span>
        }
        else if (Model.Type == "dataset")
        {
            <span class="label label-success">@Resources.UI.Metadata_Type_Dataset</span>
        }
        else
        {
            <span class="label label-warning">@Model.Type</span>
        }
    </th>
    <th>
        @if (Model.Uuid == "5ca4add53a09a6b7bb96ace195a936d4daa412b8")
        {
            <span class="glyphicon glyphicon-exclamation-sign" style="color: orange"></span>
            <a href=""><span style="font-size: x-small">Vis detaljer</span></a>
        }
        else
        {
            <span class="glyphicon glyphicon-ok-sign" style="color: green"></span>
        }
    </th>
    <td class="text-right btn-toolbar">
        <div class="btn-group">
            <a href="http://www.geonorge.no/geonetwork/srv/eng/xml_iso19139?uuid=@Model.Uuid" target="_blank" class="btn btn-default btn-xs">
                <i class="glyphicon glyphicon-file"></i> Last ned XML
            </a>
            <a href="http://www.geonorge.no/geonetwork/?uuid=@Model.Uuid" target="_blank" class="btn btn-default btn-xs">
                <span class="glyphicon glyphicon-share-alt"></span> Vis i katalog
            </a>
        </div>
    </td>
</tr>

@if (Model.Relations.Count > 0)
{
    foreach (var relation in Model.Relations)
    {
        @Html.Partial("_MetadataItem", relation, new ViewDataDictionary(this.ViewData) { { "relation", true } })    
    }
}
