@model Kartverket.MetadataEditor.Models.MetadataViewModel
<p>
    Oversetting av utvalgte felter til engelsk. Merk at de norske tekstene er de som sist er lagret i databasen.
</p>
<div class="form-group">
    <label class="col-sm-2 control-label">Tittel</label>
    <div class="col-sm-5">
        @Html.EditorFor(m => m.EnglishTitle)
    </div>
    <div class="col-sm-5 control-text">
        <b>Norsk:</b> @Html.DisplayFor(m => m.Title)
    </div>
</div>
<div class="form-group">
    <label class="col-sm-2 control-label">Sammendrag</label>
    <div class="col-sm-5">
        @Html.EditorFor(m => m.EnglishAbstract)
    </div>
    <div class="col-sm-5 control-text">
        <b>Norsk:</b> @Html.DisplayFor(m => m.Abstract)
    </div>
</div>