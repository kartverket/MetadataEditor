@model Kartverket.MetadataEditor.Models.MetadataViewModel
<div class="form-group">
    <label class="col-sm-2 control-label">Oppdateringshyppighet</label>
    <div class="col-sm-9">
        @Html.DropDownList("MaintenanceFrequency", ViewBag.MaintenanceFrequencyValues as SelectList, String.Empty, new { @class = "form-control" })
    </div>
</div>
<div class="form-group">
    <label class="col-sm-2 control-label">Målestokkstall</label>
    <div class="col-sm-9">
        @Html.EditorFor(m => m.ResolutionScale)
    </div>
</div>
<div class="form-group">
    <label for="abstract" class="col-sm-2 control-label">Status</label>
    <div class="col-sm-9">
        @Html.DropDownList("Status", ViewBag.StatusValues as SelectList, String.Empty, new { @class = "form-control" })
    </div>
</div>
<div class="form-group">
    <label class="col-sm-2 control-label">Prosesshistorie</label>
    <div class="col-sm-9">
        @Html.TextAreaFor(m => m.ProcessHistory, new { @class = "form-control", cols = "", rows = "5" })
    </div>
</div>


@if (!Model.IsSoftware())
{
    <div class="panel panel-default">
        <div class="panel-heading">
            Konformitet
            <div class="pull-right"><a href="#" data-help-text-id="help-text-Conformity" class="badge help-text-toggle">?</a></div>
    </div>
        <div class="panel-body">
            <p class="help-text bg-success" id="help-text-Conformity" style="display: none">
                Forhåndsutfylling av referanse til Inspire er nødvendig for datasett som er omfattet av Inspire-direktivet. Datasettet eller tjenesten trenger ikke være harmonisert med datasettspesifikasjonen. Da skal heller ikke "godkjent" være huket av.
            </p>
            <p>Forhåndsutfylling: <button id="prefillConformityInspire" class="btn btn-default">INSPIRE</button> <button id="prefillConformitySosi" class="btn btn-default">SOSI-fagområde</button></p>

            <div class="form-group">
                <label class="col-sm-2 control-label">Standard (produktspesifikasjon)</label>
                <div class="col-sm-9">
                    @Html.EditorFor(m => m.QualitySpecificationTitle)
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">Dato</label>
                <div class="col-sm-2">
                    @Html.EditorFor(m => m.QualitySpecificationDate)
                </div>
                <label class="col-sm-2 control-label">Type dato</label>
                <div class="col-sm-2">
                    @Html.EditorFor(m => m.QualitySpecificationDateType)
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">Forklaring av resultat</label>
                <div class="col-sm-9">
                    @Html.EditorFor(m => m.QualitySpecificationExplanation)
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">Godkjent</label>
                <div class="col-sm-9">
                    @Html.EditorFor(m => m.QualitySpecificationResult)
                </div>
            </div>
        </div>
    </div>
}