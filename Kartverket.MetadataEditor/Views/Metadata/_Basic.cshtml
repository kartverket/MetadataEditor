@model Kartverket.MetadataEditor.Models.MetadataViewModel

<div class="form-group">
    <label for="title" class="col-sm-2 control-label">Navn</label>
    <div class="col-sm-9">
        @Html.EditorFor(m => m.Title)
    </div>
</div>

<div class="form-group">
    <label for="purpose" class="col-sm-2 control-label">Formål</label>
    <div class="col-sm-9">
        @Html.TextAreaFor(m => m.Purpose, new { @class = "form-control", cols = "", rows = "3" })
        <div class="help-block panel panel-success hidden" id="help-block-purpose">
            <div class="panel-body">
                Dette er hjelpeteksten
            </div>
        </div>
    </div>
    <div class="col-sm-1">
        <p class="form-control-static">
            <a href="#" data-help-block-id="help-block-purpose" class="badge help-block-toggle">?</a>
        </p>
    </div>
</div>

<div class="form-group">
    <label for="abstract" class="col-sm-2 control-label">Sammendrag</label>
    <div class="col-sm-9">
        @Html.TextAreaFor(m => m.Abstract, new { @class = "form-control", cols = "", rows = "6" })
        <div class="help-block panel panel-success hidden" id="help-block-abstract">
            <div class="panel-body">
                Dette er hjelpeteksten
            </div>
        </div>
    </div>
    <div class="col-sm-1">
        <p class="form-control-static">
            <a href="#" data-help-block-id="help-block-abstract" class="badge help-block-toggle">?</a>
        </p>
    </div>
</div>

<div class="form-group">
    <label for="abstract" class="col-sm-2 control-label">Opprettet dato</label>
    <div class="col-sm-2">
        @Html.EditorFor(m => m.DateCreated)
    </div>
    <label for="abstract" class="col-sm-2 control-label">Publiseringsdato</label>
    <div class="col-sm-2">
        @Html.EditorFor(m => m.DatePublished)
    </div>
</div>
<div class="form-group">
    <label for="abstract" class="col-sm-2 control-label">Dato sist oppdatert</label>
    <div class="col-sm-2">
        @Html.EditorFor(m => m.DateUpdated)
    </div>
</div>
<div class="form-group">
    <label for="keywords" class="col-sm-2 control-label">Nøkkelord</label>
    <div class="col-sm-9">

        <div class="col-sm-6">
            <p class="keyword-header">Tema</p>
            <ul id="keywords-theme">
                @for (int i = 0; i < Model.KeywordsTheme.Count; i++)
                {
                    var keyword = Model.KeywordsTheme[i];
                    <li id="keywords-theme-@i">
                        <span class="label label-success">@keyword</span>
                        <a href="" class="keyword-delete" data-delete="keywords-theme-@i"><small>Slett</small></a>
                        <input type="hidden" name="KeywordsTheme[@i]" value="@keyword" />
                    </li>
                }
            </ul>
            <div class="form-group">
                <div class="col-sm-6">
                    <input type="text" id="keywords-theme-text" class="form-control"/>
                </div>
                <div class="col-sm-2">
                    <button class="btn btn-default btn-sm" id="keywords-theme-add">Legg til</button>
                </div>
            </div>
        </div>
               
        <div class="col-sm-6">
            <p class="keyword-header">Sted</p>
            <ul id="keywords-place">
