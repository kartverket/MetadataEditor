                    </li>
                }
            </ul>
            <div class="form-group">
                <div class="col-sm-6">
                    <input type="text" id="keywords-place-text" class="form-control" />
                </div>
                <div class="col-sm-2">
                    <button class="btn btn-default btn-sm" id="keywords-place-add">Legg til</button>
                </div>
            </div>
        </div>

        <div class="col-sm-6">
            <p class="keyword-header">Initiativ/tilhørighet</p>
            <ul id="keywords-national-initiative">
                @for (int i = 0; i < Model.KeywordsNationalInitiative.Count; i++)
                {
                    var keyword = Model.KeywordsNationalInitiative[i];
                    <li id="keywords-national-initiative-@i">
