@model Kartverket.MetadataEditor.Models.MetadataIndexViewModel

<h1>@Resources.UI.MyMetadata_Label</h1>

@if (!string.IsNullOrWhiteSpace(ViewBag.StatusMessage))
{
    <div class="col-sm-offset-2 col-sm-7">
        <div class="panel panel-primary">
            <div class="panel-heading">Feilmelding</div>
            <div class="panel-body">@ViewBag.StatusMessage</div>
        </div>
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>@Resources.UI.Metadata_Title</th>
            <th>@Resources.UI.Metadata_Organization</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var metadata in Model.MetadataItems)
        {
            <tr>
                <td><a href="@Url.Action("Edit", new { uuid=@metadata.Uuid })">@metadata.Title</a></td>
                <td>@metadata.Organization</td>
            </tr>
        }
    </tbody>
</table>
