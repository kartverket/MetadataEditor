    <div class="body-content">
        <div class="container">
            <ol class="breadcrumb">
                <li><a href="@Html.GeonorgeUrl()">Geonorge</a></li>
                <li><a href="/">Metadataeditor</a></li>
                @RenderSection("breadcrumb", false)
            </ol>
            <div class="menu clearfix">
                @if (Request.IsAuthenticated)
                {
                    if (IsSectionDefined("ActionMenu"))
                    {
                    @RenderSection("ActionMenu")
                    }
                    else
                    {
                    <div class="btn-group">
                        <a href="@Url.Action("Index", "Metadata")" class="btn btn-sm btn-default"><span class="glyphicon glyphicon-list-alt"></span> Mine metadata</a>
                        <a href="@Url.Action("RegisterData", "Metadata")" class="btn btn-sm btn-default"><span class="glyphicon glyphicon-list-alt"></span> Mine registerdata</a>
                        <a href="@Url.Action("Create","Metadata")" class="btn btn-sm btn-default"><span class="glyphicon glyphicon-plus-sign"></span> Opprett metadata</a>
                    </div>
                    }
                }

                <div class="pull-right">
                    @if (Request.IsAuthenticated)
                    {
                        string username = "";
                        foreach (var c in System.Security.Claims.ClaimsPrincipal.Current.Claims)
                        {
                            if (c.Type == "urn:oid:0.9.2342.19200300.100.1.1" || c.Type == "username")
                            {
                                username = @c.Value;
                            }
                        }
                        <a href="@Url.Action("SignOut", "AuthServices")" class="btn btn-default btn-sm"><span class="glyphicon glyphicon-user"></span> Logg ut @username</a>
                    }
                    else
                    {
                        <a href="@Url.Action("SignIn", "AuthServices")" class="btn btn-default btn-sm"><span class="glyphicon glyphicon-user"></span> Logg inn</a>
                    }
                </div>
            </div>
            @if (TempData["Message"] != null)
            {
            <div class="alert alert-info">
                @TempData["Message"]
            </div>
            }

            @if (TempData["success"] != null)
            {
                <div id="savedOKMsg" class="alert alert-success">
                    @TempData["success"]
                </div>
                <script>function removeokmsg() { document.getElementById('savedOKMsg').style.visibility = 'hidden'; document.getElementById('savedOKMsg').style.display = 'none'; }</script>
            }
            @if (TempData["failure"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["failure"]
                </div>
            }

            @RenderBody()
        </div>
