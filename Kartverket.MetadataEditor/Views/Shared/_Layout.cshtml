@using Kartverket.MetadataEditor.Helpers

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="geonorge-version" content="@Html.ApplicationVersionNumber()" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" type="image/x-icon" href="@Html.KartkatalogUrl()Content/img/favicon.ico" />
    <title>
        @ViewBag.Title
        @if (ViewBag.Title != null)
        {
            <text> - </text>
        }
        @Resources.UI.AppPageTitle
    </title>

    <!-- Stylesheets -->
    @Styles.Render("~/Content/bower_components/kartverket-felleskomponenter/assets/css/styles")

    <!-- Scripts -->

    @RenderSection("head", required: false)
    @Html.Partial("_Analytics")
    <script>
        var validationUUIDs = [];
    </script>
    <script>
        var applicationEnvironment = '@Html.EnvironmentName()';
        var authenticationData = {
            supportsLogin: true,
            isAuthenticated: @Request.IsAuthenticated.ToString().ToLower(),
            urlActionSignOut: '@Url.Action("Logout", "AuthServices")',
            urlActionSignIn: '@Url.Action("SignIn", "AuthServices")'
            @if (Request.IsAuthenticated)
            {
                foreach (var c in System.Security.Claims.ClaimsPrincipal.Current.Claims) {
                    if (c.Type == "urn:oid:0.9.2342.19200300.100.1.1" || c.Type == "username") {
                       <text>, userName: '@c.Value'</text>
                    }
                }
            }
        }
    </script>

    @Scripts.Render("~/Content/bower_components/kartverket-felleskomponenter/assets/js/scripts")
    @Scripts.Render("~/Scripts/local-scripts")
    @RenderSection("scripts", required: false)

</head>
<body class="geonorge-container prototype  geonorge ng-scope" ng-app="geonorge">
    <!-- Google Tag Manager -->
    <noscript>
        <iframe src="//www.googletagmanager.com/ns.html?id=GTM-MR2X5P"
                height="0" width="0" style="display:none;visibility:hidden"></iframe>
    </noscript>
    <script>
        (function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
        new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
        j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
        '//www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
        })(window,document,'script','dataLayer','GTM-MR2X5P');</script>
    <!-- End Google Tag Manager -->

    @RenderPage("~/Content/bower_components/kartverket-felleskomponenter/assets/partials/_SharedMenu.min.cshtml")

    <div class="body-content">
        <div class="container">
            <div class="container container-breadcrumbs" id="navTabCont">
                <ul class="breadcrumbs col-md-12">
                    <li><a href="@Html.GeonorgeUrl()">Geonorge</a></li>
                    <li><a href="/">Metadataeditor</a></li>
                    @RenderSection("breadcrumb", false)
                </ul>
            </div>

            <div class="menu clearfix margin-top-10">
                @if (Request.IsAuthenticated)
                {
                    if (IsSectionDefined("ActionMenu"))
                    {
                        @RenderSection("ActionMenu")
                    }
                    else
                    {
                        <ul class="nav nav-tabs link-tabs">
                            <li class="tab"><a data-tab="mine-metadata" href="@Url.Action("Index", "Metadata")"><span class="glyphicon glyphicon-list-alt"></span> Mine metadata</a></li>
                            <li class="tab"><a data-tab="opprett-metadata" href="@Url.Action("Create","Metadata")"><span class="glyphicon glyphicon-plus-sign"></span> Opprett metadata</a></li>
                            @if (Html.SimpleMetadataEnabled())
                            {
                                <li class="tab"><a data-tab="opprett-enkle-metadata" href="@Url.Action("Create","SimpleMetadata")"><span class="glyphicon glyphicon-plus-sign"></span> Opprett enkle metadata</a></li>
                            }
                            <li class="tab"><a data-tab="batch-oppdatering" href="@Url.Action("Index","Batch")"><span class="glyphicon glyphicon-cog"></span> Batch-oppdatering</a></li>
                            <li class="pull-right">
                                @foreach (var c in System.Security.Claims.ClaimsPrincipal.Current.Claims)
                                {
                                    if (c.Value == "nd.metadata_admin")
                                    {
                                        <a href="@Url.Action("ValidateAll", "Validator")" class="btn" onclick="return clickAndDisable(this);"><span class="glyphicon glyphicon-envelope"></span> <span id="link-email-error">Send epost om feil</span></a>
                                        <script>
                                            function clickAndDisable(link) {

                                                document.getElementById('link-email-error').innerText = 'Henter eposter, vennligst vent...';
                                                if (link.className != "visited btn btn-sm btn-default") {
                                                    link.className = "visited btn btn-sm btn-default";
                                                    return true;
                                                }

                                                return false;
                                            }
                                        </script>
                                        break;
                                    }
                                }
                            </li>
                        </ul>

                    }
                }

            </div>
            @if (TempData["Message"] != null)
            {
                <div class="alert alert-info">
                    @TempData["Message"]
                </div>
            }

            @if (TempData["success"] != null)
            {
                <div id="savedOKMsg" class="alert alert-success">
                    @TempData["success"]
                </div>
                <script>function removeokmsg() { document.getElementById('savedOKMsg').style.visibility = 'hidden'; document.getElementById('savedOKMsg').style.display = 'none'; }</script>
            }
            @if (TempData["failure"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["failure"]
                </div>
            }

            <div id="tab-content">@RenderBody()</div>
        </div>
    </div>
    <footer class="page-footer">
        <div class="container container-footer">
            <div>
                <div class="block editorialblock col-md-12 col-lg-4  ">

                    <p><img alt="" src="@Html.KartkatalogUrl()Content/img/geonorge.png" height="87" width="381" /></p>
                    <small>Versjon @Html.ApplicationVersionNumber()</small>
                    <!--<p><a href="/Om-Kartverket/Personvern-og-cookies/"> Personvern og cookies </a></p>-->
                    <!--
                    @if (User.Identity.IsAuthenticated)
                    {
                        foreach (var c in System.Security.Claims.ClaimsPrincipal.Current.Claims)
                        {
                            <p>@c.Type = @c.Value</p>
                        }
                    }
                    -->
                    <ul class="editorialblock-list-item"></ul>
                </div><div class="block editorialblock col-md-12 col-lg-4  ">

                    <h2>Om nettstedet:</h2>

                    <ul class="editorialblock-list-item">
                        <li>
                            <a href="@Html.GeonorgeUrl()informasjon/om-geonorge/">Om Geonorge</a>
                        </li>
                        <li>
                            <a href="@Html.GeonorgeUrl()informasjon/aktuelt/annet/personvern-og-bruk-av-cookies/">Personvern og bruk av cookies</a>
                        </li>
                    </ul>
                </div><div class="block editorialblock col-md-12 col-lg-4  ">

                    <h2>Kontakt</h2>
                    <p><span style="font-family: 'Open Sans', sans-serif; font-size: 22px;">Telefon: 08700<br /></span>Fra utlandet: +47 32 11 81 21<br /><a title="post@norgedigitalt.no" href="mailto:post@norgedigitalt.no">post@norgedigitalt.no</a><br />Org. nr.: 971 040 238</p>
                    <hr />
                    <p>En løsning fra</p>
                    <p><img alt="" src="@Html.KartkatalogUrl()Content/img/kartverket.png" height="75" width="195" /></p>
                    <ul class="editorialblock-list-item"></ul>
                </div>
            </div>
        </div>
    </footer>
</body>
</html>
