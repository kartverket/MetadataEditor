<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
    @ViewBag.Title
    @if (ViewBag.Title != null) {
         <text> - </text> 
    }
    @Resources.UI.AppPageTitle
    </title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("head", required: false)
</head>
<body>
    
    <div class="navbar navbar-default" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Meny</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <span class="navbar-brand"><img class="logo" src="@Url.Content("~/Content/logo_kartverket_norgedigitalt.png")" width="222" height="52" /></span>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li class="divider-vertical"></li>
                    <li><a href="/">geoNorge - Metadataeditor</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a target="_blank" href="http://www.geonorge.no">geoNorge hovedside</a></li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">

        <div class="pull-right">
            @if (Request.IsAuthenticated)
            {
                string username = "";
                foreach (var c in System.Security.Claims.ClaimsPrincipal.Current.Claims)
                {
                    if (c.Type == "urn:oid:0.9.2342.19200300.100.1.1" || c.Type == "username")
                    {
                        username = @c.Value;
                    }
                }
                <a href="@Url.Action("SignOut", "AuthServices")" class="btn btn-default btn-sm"><span class="glyphicon glyphicon-user"></span> Logg ut @username</a>
            }
            else
            {
                <a href="@Url.Content("~/Saml2AuthenticationModule/SignIn")" class="btn btn-default btn-sm"><span class="glyphicon glyphicon-user"></span> Logg inn</a>
            }
        </div>

        @RenderBody()

        <hr />
        <footer>
            <!--
            @if (User.Identity.IsAuthenticated)
            {
                foreach (var c in System.Security.Claims.ClaimsPrincipal.Current.Claims)
                {
                    <p>@c.Type = @c.Value</p>
                }
            }
            -->
            <p>&copy; @DateTime.Now.Year - Kartverket</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
