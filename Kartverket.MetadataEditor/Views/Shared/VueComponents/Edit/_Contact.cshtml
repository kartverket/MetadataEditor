@using Resources

<script type="text/x-template" id="contact-template">
    <div>
        <div v-for="section in sections" class="panel panel-default">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-md-11">
                        <span class="required">{{ section.name }}</span>
                    </div>
                    <div class="col-md-1">
                        <span v-on:click="section.helpText.active = !section.helpText.active" v-bind:class="{active: section.helpText.active}" class="badge help-text-toggle">?</span>
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>
            <div class="panel-body">
                <p v-if="section.helpText && section.helpText.active" class="help-text bg-success" v-html="section.helpText.content"></p>
                <div v-for="formElement in section.formElements" class="form-group has-feedback" v-bind:class="{required: formElement.required}">
                    <div class="row">
                        <label for="abstract" class="col-md-2 control-label">{{ formElement.label }}</label>
                        <div class="col-md-9">
                            <input v-if="formElement.type == 'text'" v-bind:type="formElement.type" v-model="formElement.value" class="form-control" />
                            <div v-else-if="formElement.type == 'select'" class="custom-select">
                                <select v-model="formElement.value" class="form-control">
                                    <option v-bind:value="option.Value" v-bind:disabled="option.Disabled" v-bind:selected="option.Selected" v-for="option in formElement.options">
                                        {{ option.Text }}
                                    </option>
                                </select>
                            </div>
                            <span class="glyphicon glyphicon-warning-sign form-control-feedback"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</script>

